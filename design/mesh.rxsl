
pub mesh StandardMesh {
  position: vec3<f32>,
  normal: vec3<f32>,
  uv: vec2<f32>
}

impl GeometricPosition for StandardMesh {
  vertex in position() -> vec3<f32> {
    position
  }
}

impl GeometricNormal for StandardMesh {
  vertex in normal() -> vec3<f32> {
    normal
  }
}

impl GeometricUV for StandardMesh {
  vertex in uv() -> vec3<f32> {
    uv
  }
}
